<div class="page-header">
  <h1>
    Friendrequests
    <a href="/friendrequests/new" class="btn btn-lg btn-success">New Friendrequest</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Sender</th>
        <th>Recipient</th>
        <th>Actions</th>
      </tr>

      <% @friendrequests.each do |friendrequest| %>
      <tr>
        <td><%= friendrequest.sender.username %></td>
        <td><%= friendrequest.recipient_id %></td>
        <td>
          <a href="/friendrequests/<%= friendrequest.id %>" class="btn btn-primary">Show</a>
          <a href="/friendrequests/<%= friendrequest.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_friendrequest/<%= friendrequest.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
