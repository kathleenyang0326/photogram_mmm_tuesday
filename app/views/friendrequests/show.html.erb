<div class="page-header">
  <h3>Friendrequest #<%= @friendrequest.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Sender</dt>
      <dd>
        <% if @friendrequest.sender.present? %>
          <a href="/users/<%= @friendrequest.sender_id %>">
            <%= @friendrequest.sender.username %>
          </a>
        <% end %>
      </dd>

      <dt>Recipient</dt>
      <dd>
        <% if @friendrequest.recipient.present? %>
          <a href="/users/<%= @friendrequest.recipient_id %>">
            <%= @friendrequest.recipient.username %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/friendrequests" class="btn btn-primary">
        Back
      </a>
      <a href="/friendrequests/<%= @friendrequest.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_friendrequest/<%= @friendrequest.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
